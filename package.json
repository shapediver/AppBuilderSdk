    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint-plugin-react": "^7.33.2",
    "typescript": "^4.9.5",
    "vite": "^5.1.3",
    "vite-plugin-svgr": "^4.2.0",
