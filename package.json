    "react-scripts": "5.0.1",
    "remark-directive": "^3.0.0",
    "zustand": "^4.5.1"
  },
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "optimize": "tsc && vite optimize --force",
    "preview": "vite preview",
    "eslint": "eslint .",
    "build-appbuilder": "scripts/build-appbuilder.sh $npm_package_version",
