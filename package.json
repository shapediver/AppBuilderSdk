{
  "name": "shapediver-create-react-app",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "homepage": "./",
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@mantine/core": "^7.5.3",
    "@mantine/hooks": "^7.5.3",
    "@shapediver/sdk.platform-api-sdk-v1": "^2.18.9",
    "@shapediver/viewer": "2.12.6",
    "@shapediver/viewer.utils.mime-type": "1.0.1",
